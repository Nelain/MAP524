<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shira.international_students.RegionDetailActivity">

    <!--http://www.mkyong.com/android/android-tablelayout-example/-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RegionName"
        android:id="@+id/regionName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/regionFlag"
        android:src="@drawable/none"
        android:layout_below="@+id/regionName"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2013 Rank: 10"
        android:id="@+id/rank_2013"
        android:layout_below="@+id/regionName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2014 Rank: 12"
        android:id="@+id/rank_2014"
        android:layout_below="@+id/rank_2013"
        android:layout_alignParentRight="true" />

    <com.jjoe64.graphview.GraphView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/regionFlag"
        android:layout_height="180dp"
        android:id="@+id/regionGraph" />

    <TableLayout
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/regionTable"
        android:layout_below="@+id/regionGraph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/cTableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/cCell1_1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text=""
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell1_2"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Q1"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell1_3"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Q2"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell1_4"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Q3"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell1_5"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Q4"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell1_6"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Total"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/cTableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cCell2_1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="2013"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell2_2"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="2013Q1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell2_3"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="2013Q2"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell2_4"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="2013Q3"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell2_5"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="2013Q4"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell2_6"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Total"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/cTableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cCell3_1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="2014"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell3_2"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="12356"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell3_3"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="12356"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell3_4"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="12356"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell3_5"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="12356"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell3_6"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="123567"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <View
            android:layout_height="3dp"
            android:background="#FF0000" />

        <TableRow
            android:id="@+id/cTableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cCell4_1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="Change"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell4_2"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="#ffffff"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/cCell4_3"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:background="#ffffff"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceMedium" />
